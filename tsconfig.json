{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "allowJs": true,
    "paths": {
      "@API/*": ["src/API/*"],
      "@CLI/*": ["src/CLI/*"],

      "@DiscordSettings/*": ["src/BOT/discord/settings/*"],
      "@DiscordActions/*": ["src/BOT/discord/lib/actions/*"],
      "@DiscordBuilders/*": ["src/BOT/discord/lib/builders/*"],
      "@DiscordSelectors/*": ["src/BOT/discord/lib/selectors/*"],
      "@DiscordWatchers/*": ["src/BOT/discord/lib/watchers/*"],

      "@TelegramSettings/*": ["src/BOT/telegram/settings/*"],
      "@TelegramActions/*": ["src/BOT/telegram/lib/actions/*"],
      "@TelegramBuilders/*": ["src/BOT/telegram/lib/builders/*"],
      "@TelegramSelectors/*": ["src/BOT/telegram/lib/selectors/*"],
      "@TelegramWatchers/*": ["src/BOT/telegram/lib/watchers/*"],

    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
}
